<EditDialog @ref="SettingsDialog"
            Title="Paramètres"
            OkButtonText="Fermer"
            ShowCancelButton="false">
    <div class="d-flex flex-column">
        <div class="p-2">
            @foreach (var value in TeamTypeFilter)
            {
                <div class="form-check">
                    <label class="form-check-label" for="team-type-@value.Value">@value.Value</label>
                    <input class="form-check-input" id="team-type-@value.Value" type="checkbox" value="@value.IsChecked" checked="@value.IsChecked" @onchange="(e) => OnTeamTypeFilterChanged(e, value)">
                </div>
            }
        </div>
        <div class="p-2">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="autoRotate" @bind-value="@ShouldAutoRotate" checked="@ShouldAutoRotate">
                <label class="form-check-label" for="autoRotate">Rotation automatique</label>
            </div>
            <div class="row">
                <div class="col-auto">
                    <label class="form-label" for="rotation-interval">Interval</label>
                </div>
                <div class="col-auto">
                    <input class="form-control form-control-sm" type="number" id="rotation-interval" min=1 @bind-value="@RotationInterval" />
                </div>
            </div>
        </div>
    </div>
</EditDialog>